---
import BaseLayout from "../layouts/BaseLayout.astro";
import VideoDoorCard from "../components/VideoDoorCard.jsx";
import RoomNavDoors from "../components/RoomNavDoors.jsx";

import essexDoor from "../assets/essex-door.mp4";
import backDoor from "../assets/back-door.mp4";
import homeDoor from "../assets/home-door.mp4";
---

<BaseLayout title="Essex Room">
  <div class="min-h-screen bg-[#e8eef7] text-center pt-24 pb-16">
    <h1 class="text-5xl font-['Playfair Display'] font-bold mb-3">Essex Room</h1>
    <p class="text-lg text-gray-700 mb-12">Choose your pathâ€¦</p>

    <section class="gallery-grid">
      <VideoDoorCard client:load title="Choice 1" videoSrc={essexDoor} link="choice1" />
      <VideoDoorCard client:load title="Choice 2" videoSrc={essexDoor} link="choice2" />
      <VideoDoorCard client:load title="Choice 3" videoSrc={essexDoor} link="choice3" />
      <VideoDoorCard client:load title="Choice 4" videoSrc={essexDoor} link="choice4" />
    </section>

    <RoomNavDoors client:load
      prevLink="beyond"
      prevTitle="Back to Beyond"
      prevVideo={backDoor}
      homeVideo={homeDoor}
    />
  </div>
</BaseLayout>
