---
import photos from "../data/photos.json";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Astro Gallery Prototype</title>
    <script src="https://assets.lemonsqueezy.com/lemon.js" defer></script>
  </head>
  <body class="bg-gray-50 min-h-screen p-10">
    <h1 class="text-4xl font-bold mb-10 text-center">Gallery</h1>

    <section class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {photos.map((photo) => (
        <figure class="bg-white rounded-2xl shadow-md p-4">
          <img
            src={photo.src}
            alt={photo.title}
            class="rounded-xl mb-4"
            loading="lazy"
          />
          <figcaption class="text-lg font-medium mb-3 text-center">
            {photo.title}
          </figcaption>
          <button
            data-ls-checkout="true"
            data-ls-product={photo.productId}
            class="block mx-auto bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800"
          >
            Buy High-Res
          </button>
        </figure>
      ))}
    </section>
  </body>
</html>
