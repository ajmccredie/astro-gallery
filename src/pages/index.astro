---
import BaseLayout from "../layouts/BaseLayout.astro";
import entranceDoors from "../data/entrance.json";
import VideoDoorCard from "../components/VideoDoorCard.jsx";
import MenuToggle from "../components/MenuToggle.jsx";

import essexDoor from "../assets/essex-door.mp4";
import beyondDoor from "../assets/beyond-door.mp4";

const entranceDoors = [
  { title: "Essex", videoSrc: essexDoor, link: "astro-gallery/essex" },
  { title: "Beyond", videoSrc: beyondDoor, link: "astro-gallery/beyond" }
];
---

<BaseLayout title="Welcome to the Gallery">
  <MenuToggle client:load />

  <div class="min-h-screen w-full flex flex-col items-center relative pt-24">
    <header class="text-center mb-10">
      <h1 class="text-5xl font-bold font-['Playfair Display'] tracking-tight mb-3">Welcome to the Gallery</h1>
      <p class="text-lg text-gray-600">Please choose a doorway to enter</p>
    </header>

    <section class="w-full max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12 place-items-center py-12">
      {entranceDoors.map((door) => (
        <VideoDoorCard client:load title={door.title} videoSrc={door.videoSrc} link={door.link} />
      ))}
    </section>
  </div>
</BaseLayout>
