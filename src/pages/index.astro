---
import BaseLayout from "../layouts/BaseLayout.astro";
import VideoDoorCard from "../components/VideoDoorCard.jsx";
import MenuToggle from "../components/MenuToggle.jsx";
import FloatingMenu from "../components/FloatingMenu.jsx";
import VideoDoorCard from "../components/VideoDoorCard.jsx";

// Astro-managed video assets
import essexDoor from "../assets/essex-door.mp4";
import beyondDoor from "../assets/beyond-door.mp4";

const entranceDoors = [
  { title: "Essex",  videoSrc: essexDoor,  link: "essex"  },
  { title: "Beyond", videoSrc: beyondDoor, link: "beyond" },
];
---

<BaseLayout title="Welcome to the Gallery">
  <FloatingMenu client:load />

  <div class="pt-24 pb-16 text-center">
    <h1 class="text-5xl font-['Playfair Display'] font-bold mb-3">Welcome to the Gallery</h1>
    <p class="text-lg text-gray-700 mb-12">Please choose a doorway to enter</p>

    <section class="gallery-grid">
      <VideoDoorCard client:load title="Essex" videoSrc={essexDoor} link="essex" />
      <VideoDoorCard client:load title="Beyond" videoSrc={beyondDoor} link="beyond" />
    </section>
  </div>
</BaseLayout>
